<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.MainPage">
    <StackLayout>
        <Frame BackgroundColor="Black">
            <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
            <Label  Margin="10,0,0,0" Text="Title" FontSize="Medium"/>
        <Picker>
            <Picker.Items>
                <x:String>Pan</x:String>
                <x:String>Paní</x:String>
                <x:String>Prof.</x:String>
                <x:String>Mgr.</x:String>
            </Picker.Items>
        </Picker>
        <Label Margin="10,0,0,0" Text="Name"></Label>
        <Entry x:Name="Name"></Entry>
        <Label  Margin="10,0,0,0" Text="Password"></Label>
        <Entry IsPassword="True" x:Name="Password"></Entry>
        <Button Text="Login" Clicked="Button_Clicked" BackgroundColor="PaleVioletRed" CornerRadius="10" Margin="10,0,10,0"></Button>
    </StackLayout>

</ContentPage>
